<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="progress_gap">8dp</dimen>
    <dimen name="progress_height">14dp</dimen>
    <dimen name="progress_info">14dp</dimen>
    <dimen name="progress_padding">12dp</dimen>
    <style name="DialogProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/progress_height</item>
        <item name="android:layout_marginLeft">@dimen/progress_padding</item>
        <item name="android:layout_marginRight">@dimen/progress_padding</item>
    </style>
    <style name="SmallButton" parent="android:style/Widget.Button">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
</resources>